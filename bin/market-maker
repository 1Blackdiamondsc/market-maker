#!/usr/local/bin/node
var program = require('commander');

program
  .command('start')
  .description('start a market-maker trading bot')
  .action(function() {
    startMarket()
  });

program
  .parse(process.argv);

function startMarket() {
  console.log('')
  console.log('============================================================')
  console.log('Alas this software is SUPER alpha, ie does not work at all.');
  console.log('Please try again later or contact those bums at Ripple Labs');
  console.log('Contributions are accepted at https://github.com/ripple/market-maker');
  console.log('============================================================')
  console.log('');
}
